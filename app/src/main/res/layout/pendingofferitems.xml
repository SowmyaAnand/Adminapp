<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/secondCard"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/img_pending"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mob41"
            />



        <TextView
            android:layout_marginRight="30dp"
            android:id="@+id/Title_pending"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/img_pending"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_light"
            android:text="MOBILE"/>
        <TextView
            android:layout_marginRight="30dp"
            android:id="@+id/Quantity_pending"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/img_pending"
            android:layout_below="@+id/Title_pending"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_light"
            android:text="MOBILE"/>
        <TextView
            android:layout_marginRight="30dp"
            android:id="@+id/Price_pending"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/Quantity_pending"
            android:layout_toRightOf="@+id/img_pending"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_light"
            android:text="MOBILE"/>
        <TextView
            android:id="@+id/address_pending"
            android:layout_below="@+id/Price_pending"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_pending"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_light"
            android:text="Address"
            />





    <RelativeLayout
        android:id="@+id/priceadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_pending"


        >
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/pending_pending"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Pending"
                android:fontFamily="@font/roboto_medium"
                android:background="@color/red"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"

                android:layout_alignParentRight="true" />
    </RelativeLayout>
        </RelativeLayout>




</androidx.cardview.widget.CardView>
